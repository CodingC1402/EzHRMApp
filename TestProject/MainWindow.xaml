<Window
    x:Class="TestProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CornControls.CustomControl;assembly=CornControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="{x:Type Border}"/>
    </Window.Resources>
    <Grid>
        <DatePicker Height="30" Foreground="Blue" />
        <controls:DatePickerEx
            Height="50"
            VerticalAlignment="Top"
            CalendarIconPath="{DynamicResource accountIcon}"
            CalendarIconWidth="50" />
        <Border Width="100" Height="50" Background="Black"/>
    </Grid>
</Window>
