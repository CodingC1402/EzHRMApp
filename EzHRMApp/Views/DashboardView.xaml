<UserControl
    x:Class="EzHRMApp.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CornControls.CustomControl;assembly=CornControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EzHRMApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="controls:NumberDisplay">
                    <Setter Property="Margin" Value="10" />
                    <Setter Property="NumberFontSize" Value="36" />
                    <Setter Property="IconBrush" Value="#88000000" />
                    <Setter Property="FontFamily" Value="Tahoma" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Padding" Value="5" />
                    <Setter Property="NumberMargin" Value="0, -10, 0, 0" />
                    <Setter Property="IconSize" Value="48" />
                    <Setter Property="CornerRadius" Value="5" />
                    <Setter Property="Foreground" Value="{DynamicResource LightForeground}" />
                </Style>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="{DynamicResource DarkForeground}" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontFamily" Value="Tahoma" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="90" />
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Rectangle
            Grid.ColumnSpan="3"
            Width="440"
            Height="130"
            Margin="-80,-75,-80,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Fill="{DynamicResource Accent}"
            RadiusX="60"
            RadiusY="60" />

        <Grid
            Grid.ColumnSpan="3"
            Height="50"
            Margin="10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                VerticalAlignment="Center"
                Content="Viewing date: "
                Foreground="{DynamicResource LightForeground}" />
            <controls:DatePickerEx
                Grid.Column="1"
                Width="200"
                Height="35"
                HorizontalAlignment="Left"
                FocusedOutterColor="{DynamicResource AccentBright}" />
        </Grid>

        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            BorderBrush="{DynamicResource Accent}"
            BorderThickness="5"
            CornerRadius="10" />

        <controls:NumberDisplay
            Grid.Row="1"
            Background="{DynamicResource CancleButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="1"
            Grid.Column="1"
            Background="{DynamicResource UpdateButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="1"
            Grid.Column="2"
            Background="{DynamicResource ConfirmButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="2"
            Background="{DynamicResource CancleButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="2"
            Grid.Column="1"
            Background="{DynamicResource UpdateButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="2"
            Grid.Column="2"
            Background="{DynamicResource ConfirmButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />
    </Grid>
</UserControl>
