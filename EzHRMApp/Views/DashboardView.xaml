<UserControl
    x:Class="EzHRMApp.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CornControls.CustomControl;assembly=CornControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EzHRMApp.Views"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="controls:NumberDisplay">
                    <Setter Property="Margin" Value="10" />
                    <Setter Property="NumberFontSize" Value="36" />
                    <Setter Property="IconBrush" Value="#88000000" />
                    <Setter Property="FontFamily" Value="Tahoma" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Padding" Value="5" />
                    <Setter Property="NumberMargin" Value="0, -10, 0, 0" />
                    <Setter Property="IconSize" Value="48" />
                    <Setter Property="CornerRadius" Value="5" />
                    <Setter Property="Foreground" Value="{DynamicResource LightForeground}" />
                </Style>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="{DynamicResource DarkForeground}" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontFamily" Value="Tahoma" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="90" />
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Rectangle
            Grid.ColumnSpan="3"
            Width="440"
            Height="130"
            Margin="-80,-75,-80,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Fill="{DynamicResource Accent}"
            RadiusX="60"
            RadiusY="60" />

        <Grid
            Grid.ColumnSpan="3"
            Height="50"
            Margin="10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                VerticalAlignment="Center"
                Content="Viewing date: "
                Foreground="{DynamicResource LightForeground}" />
            <controls:DatePickerEx
                Grid.Column="1"
                Width="200"
                Height="35"
                HorizontalAlignment="Left"
                FocusedOutterColor="{DynamicResource AccentBright}" />
        </Grid>

        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            BorderBrush="{DynamicResource Accent}"
            BorderThickness="5"
            CornerRadius="10" />

        <controls:NumberDisplay
            Grid.Row="1"
            Background="{DynamicResource CancleButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="1"
            Grid.Column="1"
            Background="{DynamicResource UpdateButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="1"
            Grid.Column="2"
            Background="{DynamicResource ConfirmButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="2"
            Background="{DynamicResource CancleButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="2"
            Grid.Column="1"
            Background="{DynamicResource UpdateButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <controls:NumberDisplay
            Grid.Row="2"
            Grid.Column="2"
            Background="{DynamicResource ConfirmButtonBrush}"
            IconPath="{DynamicResource hourGlassMoney}"
            NumberText="0"
            Text="Late" />

        <Border
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,20,10,10"
            Padding="10,20,10,0"
            Background="{DynamicResource BackColor}"
            BorderBrush="{DynamicResource Accent}"
            BorderThickness="5"
            CornerRadius="10">
            <lvc:CartesianChart
                x:Name="test"
                Grid.Row="2"
                LegendLocation="Right"
                Series="{Binding ChartCollections}">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Year" LabelFormatter="{Binding XFormatter}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Population" LabelFormatter="{Binding YFormatter}" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <Border
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="0,10,10,20"
            Padding="10,20,10,0"
            Background="{DynamicResource BackColor}"
            BorderBrush="{DynamicResource Accent}"
            BorderThickness="5"
            CornerRadius="10">
            <lvc:CartesianChart
                x:Name="test2"
                Grid.Row="2"
                LegendLocation="Right"
                Series="{Binding ChartCollections}">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Year" LabelFormatter="{Binding XFormatter}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Population" LabelFormatter="{Binding YFormatter}" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>
        <Border
            Grid.Row="3"
            Grid.Column="2"
            Margin="10,20,0,10"
            Background="{DynamicResource Accent}"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label
                    HorizontalAlignment="Center"
                    Content="Pie chart 2"
                    Foreground="{DynamicResource LightForeground}" />

                <lvc:PieChart
                    Grid.Row="1"
                    Margin="10,0,10,10"
                    DataTooltip="{x:Null}"
                    Hoverable="False"
                    LegendLocation="Bottom">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="Maria" Values="3" />
                        <lvc:PieSeries Title="Charles" Values="4" />
                        <lvc:PieSeries Title="Frida" Values="6" />
                        <lvc:PieSeries Title="Frederic" Values="2" />
                    </lvc:PieChart.Series>
                </lvc:PieChart>
            </Grid>
        </Border>

        <Border
            Grid.Row="4"
            Grid.Column="2"
            Margin="10,10,0,20"
            Background="{DynamicResource Accent}"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label
                    HorizontalAlignment="Center"
                    Content="Pie chart 2"
                    Foreground="{DynamicResource LightForeground}" />

                <lvc:PieChart
                    Grid.Row="1"
                    Margin="10,0,10,10"
                    DataTooltip="{x:Null}"
                    Hoverable="False"
                    LegendLocation="Bottom">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="Maria" Values="3" />
                        <lvc:PieSeries Title="Charles" Values="4" />
                        <lvc:PieSeries Title="Frida" Values="6" />
                        <lvc:PieSeries Title="Frederic" Values="2" />
                    </lvc:PieChart.Series>
                </lvc:PieChart>
            </Grid>
        </Border>
    </Grid>
</UserControl>
