<UserControl
    x:Class="EzHRMApp.Views.StaffsManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CornControls.CustomControl;assembly=CornControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EzHRMApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:ViewModel;assembly=ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--<UserControl.DataContext>
        <viewmodels:StaffsManagementViewModel/>
    </UserControl.DataContext>-->

    <Grid SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="controls:RadioButtonEx">
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="SelectedPadding" Value="0, 0, 0, 5" />
                    <Setter Property="NormalPadding" Value="0, 0, 0, 5" />
                    <Setter Property="OutterColor" Value="{DynamicResource DarkerBackColor}" />
                    <Setter Property="SelectedOutterColor" Value="{DynamicResource Accent}" />
                    <Setter Property="SelectedColor" Value="{DynamicResource BackColor}" />
                    <Setter Property="Background" Value="{DynamicResource BackColor}" />
                    <Setter Property="Foreground" Value="{DynamicResource DarkForeground}" />
                    <Setter Property="HoverColor" Value="{DynamicResource DarkerBackColor}" />
                    <Setter Property="PressedColor" Value="{DynamicResource DarkestBackColor}" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="IconPad" Value="50" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <controls:RadioButtonEx
                Grid.Column="0"
                Command="{Binding ToStaffView}"
                Content="Staffs"
                IsChecked="True"
                Path="{DynamicResource staffsIcon}" />
            <controls:RadioButtonEx
                Grid.Column="1"
                Command="{Binding ToDepartmentView}"
                Content="Department" />
            <controls:RadioButtonEx Grid.Column="2" Content="Role" />
            <controls:RadioButtonEx
                Grid.Column="3"
                Content="Payroll"
                Path="{DynamicResource clockIcon}" />
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:StaffsViewModel}">
                    <local:StaffsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:DepartmentViewModel}">
                    <local:DepartmentView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</UserControl>
