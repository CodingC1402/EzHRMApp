<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzHRMApp.Views"
             xmlns:controls="clr-namespace:CornControls.CustomControl;assembly=CornControls"
             xmlns:ViewModel="clr-namespace:ViewModel;assembly=ViewModel" x:Class="EzHRMApp.Views.StaffsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModel:StaffsViewModel/>
    </UserControl.DataContext>

    <Grid SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataTable"
                  ItemsSource="{Binding EmployeeList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedEmployee, UpdateSourceTrigger=PropertyChanged}" 
                  HeadersVisibility="Column"
                  IsReadOnly="True">
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="DataGridColumnHeader" >
                    <Setter Property="Background" Value="{DynamicResource AccentDark}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0 0 1 1"/>
                    <Setter Property="Padding" Value="10 0 10 0"/>
                    <Setter Property="Height" Value="auto" />
                    <Setter Property="Width" Value="auto"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <Grid Grid.Row="1" Background="{DynamicResource Accent}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            <Label Content="ID:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15"/>
            <TextBox Text="{Binding CurrentEmployee.ID, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     VerticalAlignment="Center" 
                     Margin="65,0,0,0"
                     FontSize="15"/>

            <Label Content="CMND:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15" 
                   Grid.Row="1"/>
            <TextBox Text="{Binding CurrentEmployee.CMND, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     VerticalAlignment="Center" 
                     Margin="65,0,0,0"
                     FontSize="15"
                     Grid.Row="1"/>

            <Label Content="PPhone:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Column="0"
                   Grid.Row="2"/>
            <TextBox Text="{Binding CurrentEmployee.PrivatePhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     VerticalAlignment="Center" 
                     Margin="65,0,0,0"
                     FontSize="15"                     
                     Grid.Column="0"
                     Grid.Row="2"/>

            <Label Content="OPhone:"
                   Foreground="White"
                   Grid.Column="0"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   FontSize="15"/>
            <TextBox Text="{Binding CurrentEmployee.OfficePhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="0"
                     Grid.Row="3"
                     VerticalAlignment="Center" 
                     Margin="65,0,0,0"
                     FontSize="15"/>

            <Label Content="Name:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15" 
                   Grid.Column="1"/>
            <TextBox Text="{Binding CurrentEmployee.Name, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="1"
                     VerticalAlignment="Center" 
                     Margin="90,0,0,0"
                     FontSize="15"/>

            <Label Content="PMail:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Column="1"
                   Grid.Row="1"/>
            <TextBox Text="{Binding CurrentEmployee.PrivateEmail, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     VerticalAlignment="Center" 
                     Margin="90,0,0,0"
                     FontSize="15"                     
                     Grid.Column="1"
                     Grid.Row="1"/>

            <Label Content="OMail:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Column="1"
                   Grid.Row="2"/>
            <TextBox Text="{Binding CurrentEmployee.OfficeEmail, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     VerticalAlignment="Center" 
                     Margin="90,0,0,0"
                     FontSize="15"                     
                     Grid.Column="1"
                     Grid.Row="2"/>

            <Label Content="Department:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Column="1"
                   Grid.Row="3"/>
            <TextBox Text="{Binding CurrentEmployee.Department, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="1"
                     Grid.Row="3"
                     VerticalAlignment="Center" 
                     Margin="90,0,0,0"
                     FontSize="15"/>

            <Label Content="Role:"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Column="2"
                   Grid.Row="0"/>
            <TextBox Text="{Binding CurrentEmployee.Role, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="2"
                     Grid.Row="0"
                     VerticalAlignment="Center" 
                     Margin="75,0,0,0"
                     FontSize="15"/>

            <Label Content="BirthDate:"
                   Foreground="White"
                   Grid.Column="2"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   FontSize="15"/>
            <DatePicker Text="{Binding CurrentEmployee.BirthDay, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="2"
                     Grid.Row="1"
                     VerticalAlignment="Center" 
                     Margin="75,0,0,0"
                     FontSize="15"/>

            <Label Content="InDate:"
                   Foreground="White"
                   Grid.Column="2"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   FontSize="15"/>
            <DatePicker Text="{Binding CurrentEmployee.InDate, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="2"
                     Grid.Row="2"
                     VerticalAlignment="Center" 
                     Margin="75,0,0,0"
                     FontSize="15"/>

            <Label Content="OutDate:"
                   Foreground="White"
                   Grid.Column="2"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   FontSize="15"/>
            <DatePicker Text="{Binding CurrentEmployee.OutDate, UpdateSourceTrigger=PropertyChanged}"
                     Background="White"
                     Grid.Column="2"
                     Grid.Row="3"
                     VerticalAlignment="Center" 
                     Margin="75,0,0,0"
                     FontSize="15"/>

            <Label Content="A"
                   Grid.Column="3"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"/>

            <controls:ButtonEx Content="Change"
                               Grid.Column="3"
                               Grid.Row="3"                               
                               Margin="10,5,10,5"
                               Background="{DynamicResource AccentReallyDark}"
                               Command="{Binding ChangeModeCommand}"
                               CommandParameter="{Binding ElementName=dataTable}"/>

            <controls:ButtonEx Content="Edit"
                               Grid.Column="3"
                               Grid.Row="2"                               
                               Margin="10,5,10,5"
                               Background="{DynamicResource AccentReallyDark}"
                               Command="{Binding EditStaffCommand}"
                               CommandParameter="{Binding UpdateSourceTrigger=PropertyChanged}"/>

            <controls:ButtonEx Content="Add"
                               Grid.Column="3"
                               Grid.Row="1"
                               Margin="10,5,10,5"
                               Background="{DynamicResource AccentReallyDark}"
                               Command="{Binding AddStaffCommand}"
                               CommandParameter="{Binding UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</UserControl>
